@{
    ViewBag.Title = "Page Not Found - Reel Obscura";
    Layout = "_Layout";
}

<div class="container text-center my-5 py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-gold bg-soft-dark">
                <div class="card-header bg-dark-gold">
                    <h1 class="gold-title mb-0"><i class="bi bi-film"></i> 404 - Page Not Found</h1>
                </div>
                <div class="card-body">
                    <div class="display-1 text-gold mb-4">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                    </div>
                    <h3 class="text-light">The movie you're looking for has left the theater...</h3>
                    <p class="section-title mt-3">The requested page could not be found in our collection.</p>

                    <div class="mt-5">
                        <a href="/" class="btn btn-gold btn-lg">
                            <i class="bi bi-house-door"></i> Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>