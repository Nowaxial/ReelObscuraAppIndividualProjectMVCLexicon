<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@500;700&family=Inter:wght@300;400&family=Oswald:wght@400;600&family=Special+Elite&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/reelobscura.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <!-- Logo - vänsterjusterad på mobil, centrerad på desktop -->
                <a class="navbar-brand d-lg-none text-warning" href="/">
                    <img src="~/images/Reel_Obscura.png" alt="Logo" width="90" height="90">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Hela nav-innehållet centrerat på desktop -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <!-- Logo - centrerad endast på desktop -->
                    <a class="navbar-brand d-none d-lg-block mx-lg-4" href="/">
                        <img src="~/images/Reel_Obscura.png" alt="Logo" width="90" height="90">
                    </a>

                    <ul class="navbar-nav">
                        <li class="nav-item ">
                            <a class="nav-link" asp-controller="Movies" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movies" asp-action="Collection">My Collection</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movies" asp-action="Create">Add movie</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        <div class="container py-4">
            
            <div class="row mt-5">
                @RenderBody()
            </div>
        </div>
    </main>

    <footer class="mt-auto py-4" style="background-color: #7c0a02; border-top: 3px solid #FFD500;">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center text-md-start mb-3 mb-md-0">
                    <h5 class="mb-3" style="font-family: 'Cinzel', serif; color: #da9100;">Reel Obscura</h5>
                    <p class="mb-0" style="font-family: 'Special Elite', cursive; color: #b8860b;">Your personal movie collection</p>
                </div>
                <div class="col-md-4 text-center mb-3 mb-md-0">
                    <h5 class="mb-3" style="font-family: 'Cinzel', serif; color: #da9100;">Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-1"><a asp-controller="Movies" asp-action="Index" class="text-decoration-none" style="font-family: 'Oswald', sans-serif; color: #da9100;">Home</a></li>
                        <li class="mb-1"><a asp-controller="Movies" asp-action="Collection" class="text-decoration-none" style="font-family: 'Oswald', sans-serif; color: #da9100;">My Collection</a></li>
                        <li><a asp-controller="Movies" asp-action="Create" class="text-decoration-none" style="font-family: 'Oswald', sans-serif; color: #da9100;">Add Movie</a></li>
                    </ul>
                </div>
                <div class="col-md-4 text-center text-md-end">
                    <h5 class="mb-3" style="font-family: 'Cinzel', serif; color: #da9100;">Contact</h5>
                    <p class="mb-0" style="font-family: 'Special Elite', cursive; color: #b8860b;">info@reelobscura.com</p>
                </div>
            </div>
            <hr class="my-4" style="border-color: #FFD500;">
            <p class="text-center mb-0" style="font-family: 'Special Elite', cursive; color: #b8860b;">&copy; @DateTime.Now.Year Reel Obscura. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>