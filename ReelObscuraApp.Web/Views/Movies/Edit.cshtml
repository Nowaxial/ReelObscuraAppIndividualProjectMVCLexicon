@model EditVM.MovieEditVM

@{
    ViewBag.Title = $"Edit {Model.Title} - Reel Obscura";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-gold">
                <div class="card-header bg-dark-gold">
                    <h3 class="mb-0 gold-title"><i class="bi bi-pencil-square"></i> Edit Movie</h3>
                </div>
                <div class="card-body bg-soft-dark">
                    <form asp-controller="Movies" asp-action="Edit" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-gold mb-4"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label gold-label"></label>
                                <input asp-for="Title" type="text" class="form-control gold-input">
                                <span asp-validation-for="Title" class="text-gold small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReleaseYear" class="form-label gold-label"></label>
                                <input asp-for="ReleaseYear" type="text" class="form-control gold-input">
                                <span asp-validation-for="ReleaseYear" class="text-gold small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label gold-label"></label>
                            <textarea asp-for="Description" class="form-control gold-input" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-gold small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MoviePoster" class="form-label gold-label"></label>
                                <input asp-for="MoviePoster" type="url" class="form-control gold-input" placeholder="https://example.com/poster.jpg">
                                <span asp-validation-for="MoviePoster" class="text-gold small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="TrailerUrl" class="form-label gold-label"></label>
                                <input asp-for="TrailerUrl" type="url" class="form-control gold-input" placeholder="https://youtube.com/watch?v=...">
                                <span asp-validation-for="TrailerUrl" class="text-gold small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Actors" class="form-label gold-label"></label>
                                <input asp-for="Actors" type="text" class="form-control gold-input" placeholder="Separate actors with commas">
                                <span asp-validation-for="Actors" class="text-gold small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ImdbUrl" class="form-label gold-label"></label>
                                <input asp-for="ImdbUrl" type="url" class="form-control gold-input" placeholder="https://www.imdb.com/title/...">
                                <span asp-validation-for="ImdbUrl" class="text-gold small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-gold">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-gold">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}