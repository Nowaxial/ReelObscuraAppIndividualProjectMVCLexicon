@model Movie

@{
    ViewBag.Title = $"Delete {Model.Title} - Reel Obscura";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-gold bg-soft-dark">
                <div class="card-header bg-dark-gold">
                    <h3 class="mb-0 gold-title"><i class="bi bi-trash"></i> Delete Movie</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="@Model.MoviePoster" class="img-fluid rounded" style="max-height: 300px;" alt="@Model.Title poster">
                    </div>

                    <h4 class="text-light text-center">Are you sure you want to delete this movie?</h4>
                    <p class="section-title text-center">"@Model.Title" (@Model.ReleaseYear) will be permanently removed.</p>

                    <div class="mt-5 d-flex justify-content-center">
                        <form asp-controller="Movies" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger me-3">
                                <i class="bi bi-trash-fill"></i> Confirm Delete
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-gold">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>