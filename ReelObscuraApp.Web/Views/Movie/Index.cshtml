@model ReelObscuraApp.Web.Models.Movie[]
@addTagHelper @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reel Obscura</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@500;700&family=Inter:wght@300;400&family=Oswald:wght@400;600&family=Special+Elite&display=swap" rel="stylesheet">
    <style>
        body {
            /*background-color: #020213;
                color: #D89F0F;*/
            font-family: 'Inter', sans-serif;
        }

        h1, h2, h3 {
            font-family: 'Cinzel', serif;
            color: #3C2F2F;
        }

        .navbar {
            /*background-color: #770404;*/
            border-bottom: 2px solid #FFD500;
        }

        .nav-link {
            color: #C90606;
            font-family: 'Oswald', sans-serif;
            padding: 0.5rem 1rem;
        }

            .nav-link:hover {
                border-bottom: 2px solid red;
            }

        .navbar-toggler {
            border-color: #3C2F2F;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%2860, 47, 47, 1%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }
        /* Centrera länkar i mobilvy */

        .navbar-nav {
            margin-top: 10px;
        }



        .btn-primary {
            background-color: #B22222;
            border-color: #B22222;
        }

            .btn-primary:hover {
                background-color: #8B0000;
            }

        .section-title {
            font-family: 'Special Elite', cursive;
            color: #6A5E55;
        }

        .card {
            background-color: #FFFDF9;
            border: 1px solid #D6D1C4;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .card-title {
            color: #3C2F2F;
        }
    </style>
</head>
<body >
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid justify-content-center">
                <a href="index.html"> <img src="images/Reel_Obscura.png" alt="Logo" width="80" height="80" class="me-3 text-warning"></a>
                <a class="navbar-brand fw-bold" style="color:#3C2F2F;" href="#">Reel Obscura</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Hem</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Min Samling</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Lägg till film</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <div class="container justify-content-center py-5">
            <h1 class="mb-4"><strong>Reel Obscura</strong> - Your personal movie collecton</h1>
            <p class="section-title">Store, view, and organize your favorite movies in classic style</p>

            <div class="row mt-5">

                @foreach (var movie in Model)
                {

                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">@movie.Title</h5>
                                <p class="card-text">@movie.Description</p>
                                <a href="#" class="btn btn-primary mr-0">Show details</a>
                                <a href="#" asp-route-id="@movie.Id" class="btn btn-primary">Edit details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <a href="#" class="btn btn-primary ">Add movie</a>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>