@model ReelObscuraApp.Web.Models.Movie[]
@addTagHelper @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reel Obscura</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@500;700&family=Inter:wght@300;400&family=Oswald:wght@400;600&family=Special+Elite&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/css/reelobscura.css">
</head>
<body >
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid justify-content-center">
                <div class="d-flex align-items-center">
                    <a href="/"> <img src="images/Reel_Obscura.png" alt="Logo" width="80" height="80" class="me-3"></a>
                </div>
                <ul class="navbar-nav">
                    
                    <li class="nav-item">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">My Collection</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Add movie</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main>
        <div class="container py-5">
            <h1 class="mb-4 text-center"><strong>Reel Obscura</strong> - Your personal movie collecton</h1>
            <p class="section-title text-center">Store, view, and organize your favorite movies in classic style</p>

            <div class="row mt-5">

                @foreach (var movie in Model)
                {

                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">@movie.Title</h5>
                                <p class="card-text">@movie.Description</p>
                                <a href="#" class="btn btn-primary mr-0">Show details</a>
                                <a href="#" asp-route-id="@movie.Id" class="btn btn-primary">Edit details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <a href="/create" class="btn btn-primary ">Add movie</a>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>